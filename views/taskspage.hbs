<h1>{{title}}</h1>

{{#if tasks.length}}
  <ul>
    {{#each tasks}}
      <li>
        <strong>{{this.name}}</strong>
        <div>{{this.description}}</div>
        <small>Created: {{this.createdAt}}</small>
        <form action="/tasks/{{this.id}}/delete" method="post" style="display:inline" onsubmit="return confirm('Delete this task?');">
          <button type="submit">Delete</button>
        </form>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No tasks yet. <a href="/addtask">Add one</a>.</p>
{{/if}}

<p><a href="/">Home</a> | <a href="/addtask">Add task</a></p>
