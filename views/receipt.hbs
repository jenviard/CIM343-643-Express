<div class="phone-frame">

  <header class="site-header">
    <span class="logo">EZ pay</span>
  </header>

  <main class="phone-content">

    <section class="section">
      <form class="ez-form" method="POST" action="/receipt">

        <div class="field">
          <label class="field-label" for="itemName">Item name</label>
          <input
            id="itemName"
            name="itemName"
            type="text"
            placeholder="Food Item Name"
            required
          />
        </div>

        <div class="field">
          <label class="field-label" for="itemPrice">Amount ($)</label>
          <input
            id="itemPrice"
            name="itemPrice"
            type="number"
            step="0.01"
            min="0"
            placeholder="--.--"
            required
          />
        </div>

        <div class="button-row">
          <button type="submit" class="primary-button">
            Add item to receipt
          </button>
        </div>

      </form>
    </section>

    <section class="section">
      <h2 class="section-title">Current receipt</h2>

      {{#if items.length}}
        <ul class="receipt-list">
          {{#each items}}
            <li class="receipt-item">
              <span class="receipt-name">{{this.description}}</span>
              <span class="receipt-price">${{this.price}}</span>
            </li>
          {{/each}}
        </ul>
      {{else}}
        <p class="receipt-empty">
          No items yet. Add your first item above.
        </p>
      {{/if}}
    </section>

    <section class="section total-section">
      <div class="total-label">Total</div>
      <div class="total-value">${{total}}</div>
    </section>

    <section class="section mt-md">
      <form method="GET" action="/ezpay">
        <button type="submit" class="primary-button">
          Add cards &amp; split this bill
        </button>
      </form>

      <form method="POST" action="/receipt/reset">
        <button type="submit" class="secondary-button">
          Reset receipt (clear items &amp; payments)
        </button>
      </form>
    </section>

  </main>
</div>
